<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" 
  x:Class="Bilibili.Manga.Views.RankView">
  <GridView Name="listBox" Background="Transparent" ColumnNum="4" Grid.Row="1">
    <GridView.ItemTemplate>
      <DataTemplate>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
          <ImageBox Width="198" Source="{Binding Vertical_Cover}" HorizontalAlignment="Center" />
          <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" Margin="0,8,0,0" />
          <TextBlock Text="{Binding Newest}" HorizontalAlignment="Center" Margin="0,8,0,0" />
          <TextBlock Text="{Binding AuthorString}" HorizontalAlignment="Center" Margin="0,8,0,0" />
          <TextBlock Text="{Binding StylesString}" HorizontalAlignment="Center" Margin="0,8,0,0" />
        </StackPanel>
      </DataTemplate>
    </GridView.ItemTemplate>
  </GridView>
</UserControl>