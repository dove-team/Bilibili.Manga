<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Bilibili.Manga.Avalonia.Views.RecommandView">
	<CellListView Name="listBox" ColumnNum="4" Grid.Row="1">
		<CellListView.ItemTemplate>
			<DataTemplate>
        <CellListViewCell>
					<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
						<ImageRemote Width="198" Address="{Binding Vertical_Cover}" HorizontalAlignment="Center" />
						<TextBlock Text="{Binding Title}" HorizontalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Text="{Binding Sub_Title}" HorizontalAlignment="Center" Margin="0,8,0,0" />
            <TextBlock Text="{Binding Styles[0].Name}" HorizontalAlignment="Center" Margin="0,8,0,0" />
					</StackPanel>
        </CellListViewCell>
			</DataTemplate>
		</CellListView.ItemTemplate>
	</CellListView>
</UserControl>